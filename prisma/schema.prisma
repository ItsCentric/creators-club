generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id        String   @id
    followers User[]   @relation("follows")
    following User[]   @relation("follows")
    createdAt DateTime @default(now())
}
